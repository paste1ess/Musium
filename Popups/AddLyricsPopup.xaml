<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Musium.Popups.AddLyricsPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Musium.Popups"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Spacing="4">
        <TextBlock Text="Choose your source for retrieving lyrics." TextWrapping="Wrap" />
        <TextBlock TextWrapping="Wrap">Adding lyrics <Run FontWeight="ExtraBold">will modify the file.</Run></TextBlock>
        
        <CheckBox x:Name="SessionCheckbox" Content="Only for this session" Checked="SessionCheckbox_Checked" Unchecked="SessionCheckbox_Unchecked"/>
        <CheckBox x:Name="SyncedCheckbox" Content="Try synced lyrics (will create/modify file)" Checked="SyncedCheckbox_Checked" Unchecked="SyncedCheckbox_Unchecked"/>
    </StackPanel>
</Page>
